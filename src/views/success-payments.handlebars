<div class="container mt-5">
  <div class="mx-auto max-w-md">
    <div class="shadow-md rounded p-4">
      <h5 class="text-xl font-bold mb-4">Detalles de la Compra</h5>
      <ul class="list-disc pl-4">
        <li><strong>Código de Orden:</strong> {{payload.code}}</li>
        <li><strong>Fecha de Compra:</strong> {{payload.purchase_datetime}}</li>
        <li><strong>Monto Total:</strong> ${{payload.amount}}</li>
        <li><strong>ID de Compra:</strong> {{payload._id}}</li>
        <li><strong>Correo:</strong> {{payload.purchaser}}</li>
      </ul>
    </div>
  </div>

  <div class="mx-auto max-w-md mt-4">
    <div class="shadow-md rounded p-4">
      <h5 class="text-xl font-bold mb-4">Nuevo Carrito</h5>
      {{#if newCart.success}}
        <p class="text-green-500">{{newCart.message}}</p>
        <ul class="list-disc pl-4">
          <li><a
              href="/carts/{{newCart.cart._id}}"
              class="text-blue-500 underline"
            >VER NUEVO CARRITO</a></li>
        </ul>
      {{else}}
        <p class="text-red-500">{{newCart.message}}</p>
      {{/if}}
    </div>
  </div>

  <div class="mx-auto max-w-md mt-4">
    <div class="shadow-md rounded p-4">
      {{#if productsNotPurchase.length}}
        <div
          class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative"
          role="alert"
        >
          <strong class="font-bold">Productos no comprados:</strong>
          <ul class="list-disc pl-4">
            {{#each productsNotPurchase}}
              <li>
                <strong>Título:</strong><br />
                {{this.title}},
                <strong>Precio:</strong><br />
                ${{this.price}},
                <strong>Cantidad:</strong><br />
                {{this.quantity}}
              </li>
            {{/each}}
          </ul>
        </div>
      {{else}}
        <div
          class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative"
          role="alert"
        >
          <p>No hay productos no comprados.</p>
        </div>
      {{/if}}
    </div>
  </div>

  <div class="mt-8 text-center">
    <button class="btn btn-warning" onclick="location.href='/products'">Regresar
      al Home</button>
  </div>
</div>