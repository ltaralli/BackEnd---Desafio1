<div class="collapse collapse-arrow bg-base-200 mt-10">
  <input type="radio" name="my-accordion-2" checked="checked" />
  <div class="collapse-title text-xl font-medium">
    Añadir producto
  </div>
  <div class="collapse-content">
    <!-- Formulario para añadir un producto -->
    <form
      class="p-5 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
    >
      <div class="mb-6">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          class="form-control input input-bordered input-primary w-full max-w-xs"
          id="title"
          name="title"
          required
        />
      </div>
      <div class="mb-6">
        <label for="description" class="form-label">Description</label>
        <input
          type="text"
          class="form-control input input-bordered input-primary w-full max-w-xs"
          id="description"
          name="description"
          required
        />
      </div>
      <div class="mb-6">
        <label for="price" class="form-label">Price</label>
        <input
          type="number"
          class="form-control input input-bordered input-primary w-full max-w-xs"
          id="price"
          name="price"
          required
        />
      </div>
      <div class="mb-6">
        <label for="thumbnails" class="form-label">Thumbnails</label>
        <input
          type="text"
          class="form-control input input-bordered input-primary w-full max-w-xs"
          id="thumbnails"
          name="thumbnails"
          required
        />
      </div>
      <div class="mb-6">
        <label for="code" class="form-label">Code</label>
        <input
          type="text"
          class="form-control input input-bordered input-primary w-full max-w-xs"
          id="code"
          name="code"
          required
        />
      </div>
      <div class="mb-6">
        <label for="stock" class="form-label">Stock</label>
        <input
          type="number"
          class="form-control input input-bordered input-primary w-full max-w-xs"
          id="stock"
          name="stock"
          required
        />
      </div>
      <div class="mb-6">
        <label for="category" class="form-label">Category</label>
        <input
          type="text"
          class="form-control input input-bordered input-primary w-full max-w-xs"
          id="category"
          name="category"
          required
        />
      </div>
      <div class="pt-3">
        <button
          type="button"
          id="addProduct"
          class="btn btn-primary mt-3"
        >Submit</button>
      </div>
    </form>
  </div>
</div>
<div class="collapse collapse-arrow bg-base-200 mt-4">
