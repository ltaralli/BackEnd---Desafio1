<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-4">Lista de Usuarios</h1>
  <button onclick="deleteInactiveUsers()" class="btn btn-error mb-4">
    Eliminar Usuarios Inactivos
  </button>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre Completo</th>
        <th>Email</th>
        <th>Rol</th>
        <th class="text-center">Acciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
        <tr>
          <td>{{this.full_name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.role}}</td>
          <td class="flex justify-between justify-between">
            {{#if isEligibleForRoleChange}}
              <button
                onclick="changeUserRole('{{this._id}}')"
                class="btn btn-primary"
              >
                Cambiar de rol
              </button>
            {{else}}
              <p class="badge badge-sm self-center">No cuenta con la
                Documentación</p>
            {{/if}}
            <button
              onclick="deleteUser('{{this._id}}')"
              class="btn btn-error mt-2"
            >
              Eliminar
            </button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
